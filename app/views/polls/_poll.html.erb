<div id="poll-container">
  <h1 class="text-4xl font-bold mb-8">
    Paredao das linguagens: Vote para eliminar.
    <%= @poll_options.pluck(:name).to_sentence(last_word_connector: ' ou ') %>
  </h1>

  <div class="flex flex-col gap-4 w-100">
    <% @poll_options.each do |item| %>
      <%= button_to vote_url, method: :post, class: 'flex-grow flex items-center border border-gray-600 text-left p-4', form_class: 'w-100 flex', params: { poll_option_id: item.id } do %>
        <h2 class="text-slate-800 text-2xl font-bold flex-grow"><%= item.name %></h2>
        <%= image_tag item.photo, class: 'h-16 w-16 object-contain' %>
      <% end %>
    <% end %>
  </div>
</div>