<%= turbo_stream.replace 'poll-container' do %>
  <div id="poll-container">
    <div class="flex items center p-4 mb-8">
      <div class="flex-grow">
        <p class="font-semibold text-slate-700">Voce votou em</p>
        <p class="text-2xl font-bold"><%= @poll_option.name %></p>      
      </div>
      <%= image_tag @poll_option.photo, class: 'h-16 w-16 object-contain' %>
    </div>

    <%= link_to 'Votar novamente', root_path, class: 'block text-center p-3 text-white bg-violet-800' %>
  </div>
<% end %>